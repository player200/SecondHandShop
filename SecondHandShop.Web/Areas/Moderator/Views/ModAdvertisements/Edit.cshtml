@model AdvertisementsEditModeratorViewModel
@{
    ViewData["Title"] = $"Edit {Model.Advertisements.Name}";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-area="Moderator" asp-controller="ModAdvertisements" asp-action="Edit" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categories"></label>
                <select asp-for="Advertisements.CategoryId" asp-items="Model.Categories" class="form-control parts-select"></select>
            </div>
            <button type="submit" class="btn btn-success">Edit Advertisement</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
