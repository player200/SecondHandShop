@model AdvertisementFormModel
@{
    ViewData["Title"] = "Create Advertisement";
}
<h2>Create your Advertisement</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-area="" asp-controller="Advertisements" asp-action="Create" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categories"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control parts-select"></select>
            </div>
            <button type="submit" class="btn btn-default">Add Advertisement</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
