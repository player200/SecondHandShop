@model AdvertisementsCategoryFormModel
@{
    ViewData["Title"] = "SelectByCategory";
}

<h2>SelectByCategory</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-area="" asp-controller="Advertisements" asp-action="SelectByCategory" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Categories"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control parts-select"></select>
            </div>
            <button type="submit" class="btn btn-default">Select</button>
        </form>
    </div>
</div>