@model CreateMessageFormViewModel
@{
    ViewData["Title"] = "Send Message";
}

<h2>@ViewData["Title"] to @Model.ReceiverUserName</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-area="" asp-controller="Messages" asp-action="Send" asp-route-resieverName="@Model.ReceiverUserName" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Send</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
